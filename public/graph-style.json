[
  {
    "selector": "node",
    "style": {
      "label": "data(name)",
      "font-size": "8"
    }
  },
  {
    "selector": "node[group = 'Project']",
    "style": {
      "width": 50,
      "height": 50
    }
  },
  {
    "selector": "node[group = 'Team Member']",
    "style": {
      "width": 30,
      "height": 30,
      "background-image": "data(pfp_src)",
      "background-size": "cover",
      "background-repeat": "no-repeat",
      "background-position": "center center",
      "background-fit": "cover"
    }
  },
  {
    "selector": "edge",
    "style": {
      "width": 3,
      "curve-style": "haystack"
    }
  },
  {
    "selector": "edge[target = 'elsa']",
    "style": {
      "line-color": "#B93C3C"
    }
  }
]
